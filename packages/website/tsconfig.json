{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs", "**/*.astro"],
  "exclude": [
    "**/node_modules/**",
    "**/coverage/**",
    "**/build/**",
    "**/dist/**",
    "**/.cache/**",
    "**/api/_build/**",
    "**/public/**",
    "**/cypress/**",
    "app"
  ]
}
