{
  "extends": "@itsmapleleaf/configs/tsconfig.base",
  "compilerOptions": {
    "noImplicitOverride": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.astro",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/coverage/**",
    "**/build/**",
    "**/dist/**",
    "**/.cache/**",
    "**/api/_build/**",
    "**/public/**",
    "**/cypress/**"
  ]
}
